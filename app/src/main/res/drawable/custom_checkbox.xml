<!-- res/drawable/checkbox_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item android:drawable="@drawable/checkbox_on" />
            <item android:drawable="@drawable/checkmark_on" />
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/checkbox_off" />
            <item android:drawable="@drawable/checkmark_off" />
        </layer-list>
    </item>
</selector>
